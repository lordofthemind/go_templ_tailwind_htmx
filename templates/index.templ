package templates

templ IndexPage() {
  @Base("Home", IndexContent())
}

templ IndexContent() {
  <div class="bg-white rounded-2xl shadow-xl p-10 max-w-lg w-full text-center space-y-6 mx-auto">
    <h1 class="text-4xl font-bold text-green-700 mb-4">Go ✨ Templ ⚡ Tailwind 💨 HTMX 🚀</h1>
    <p class="text-green-900">Welcome to your starter stack! 🎉</p>

    <div class="space-y-4">
      <button 
        class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg transition"
        hx-get="/greet" 
        hx-target="#response"
        hx-swap="innerHTML"
      >
        Say Hello 👋
      </button>

      <div id="response" class="text-lg text-green-700 font-semibold"></div>
    </div>

    <div class="pt-4 border-t text-sm text-gray-400">
      Hot reload test — try editing <code>./templates/index.templ</code>!
    </div>
  </div>
}